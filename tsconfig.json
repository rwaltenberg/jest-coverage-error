{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["node", "@nuxt/types", "@nuxtjs/sentry", "qs", "jest", "vuex", "cookie-universal-nuxt"],
    "typeRoots": ["./node_modules/@types", "./node_modules/"]
  },
  "exclude": ["node_modules", "server/server.js", "**/*.spec.ts", "test/e2e"]
}
